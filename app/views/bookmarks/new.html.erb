<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1>New bookmark</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit "Submit bookmark", class: "btn btn-primary mb-5" %>
      <% end %>
    </div>
  </div>
</div>
