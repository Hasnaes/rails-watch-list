<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2><%= @list.name %></h2>
        <ul class="list-group">
          <% @list.bookmarks.each do |bookmark| %>
          <img src=<%="#{bookmark.movie.poster_url}"%>>
            <li class="list-group-item"><%= bookmark.movie.title %>
            <li class="list-group-item"><%= bookmark.comment %></li>
            <li class="list-group-item">
             <%= link_to "Delete",
            delete_bookmark_path(bookmark), class:"btn btn-secondary mt-3",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
             %>
            </li>
          <% end %>
          </ul>
      <p><%= link_to "Add bookmarks", new_list_bookmark_path(@list), class:"btn btn-info mt-3" %></p>
      <p><%= link_to "Back", lists_path(@list), class:"btn btn-primary mt-3" %></p>
    </div>
  </div>
</div>
